<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainPageActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/tb_mainPage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@color/black"
        app:titleTextColor="@color/white"/>

    <com.google.android.material.tabs.TabLayout
        android:id="@+id/tl_mainPage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/vp_mainPage">

        <com.google.android.material.tabs.TabItem
            android:id="@+id/ti_mainPage_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="김햔석" />

        <com.google.android.material.tabs.TabItem
            android:id="@+id/ti_mainPage_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="김재얀" />

        <com.google.android.material.tabs.TabItem
            android:id="@+id/ti_mainPage_3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="이준양" />

        <com.google.android.material.tabs.TabItem
            android:id="@+id/ti_mainPage_4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="방민호" />
    </com.google.android.material.tabs.TabLayout>

    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/vp_mainPage"
        android:layout_width="402dp"
        android:layout_height="622dp"
        android:layout_marginTop="56dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.461"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


